generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native"]
}

datasource db {
    provider = "postgresql"
}

model User {
    id        Int       @id @default(autoincrement())
    firstName String
    lastName  String
    email     String    @unique
    weight    Int
    height    Int
    age       Int
    gender    String
    role      UserRole?
    workouts  Workout?  @relation("ClientWorkoutRelation")
    password  String
}

model Exercise {
    id        String  @id @default(cuid())
    name      String
    sets      Int
    reps      Int
    day       Day
    workout   Workout @relation(fields: [workoutId], references: [id])
    workoutId String
}

model Workout {
    id        String     @id @default(cuid())
    name      String
    exercises Exercise[]
    clientId  Int        @unique
    client    User       @relation("ClientWorkoutRelation", fields: [clientId], references: [id])
}

enum Day {
    MONDAY
    TUESEDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
    SATURDAY
    SUNDAY
}

enum UserRole {
    TRAINER
    CLIENT
}
