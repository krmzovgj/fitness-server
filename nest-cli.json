{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/generated/**",
        "outDir": "./dist/src/generated",
        "watchAssets": true
      }
    ]
  }
}