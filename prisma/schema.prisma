generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native"]
}

datasource db {
    provider = "postgresql"
}

model User {
    id        Int       @id @default(autoincrement())
    firstName String
    lastName  String
    email     String    @unique
    weight    Int
    height    Int
    age       Int
    gender    String
    role      UserRole?
    workouts  Workout[] @relation("ClientWorkoutRelation")
    diet      Diet[]    @relation("ClientDietRelation")
    password  String
}

model Exercise {
    id        String   @id @default(cuid())
    name      String
    sets      Int
    reps      String
    workout   Workout  @relation(fields: [workoutId], references: [id])
    workoutId String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Meal {
    id          String   @id @default(cuid())
    name        String
    description String
    dietId      String
    cal         Int?
    protein     Int?
    type        MealType
    diet        Diet     @relation(fields: [dietId], references: [id])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model Workout {
    id        String     @id @default(cuid())
    name      String
    day       Day
    exercises Exercise[]
    clientId  Int        
    client    User       @relation("ClientWorkoutRelation", fields: [clientId], references: [id])
}

model Diet {
    id       String @id @default(cuid())
    name     String
    day      Day
    meals    Meal[]
    clientId Int    
    client   User   @relation("ClientDietRelation", fields: [clientId], references: [id])
}

enum Day {
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
    SATURDAY
    SUNDAY
}

enum UserRole {
    TRAINER
    CLIENT
}

enum MealType {
    BREKFAST
    LUNCH
    DINNER
    SNACK
}
